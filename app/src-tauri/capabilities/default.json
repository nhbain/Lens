{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "core:path:default",
    "fs:default",
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [{ "path": "**" }]
    },
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [{ "path": "**/*.md" }, { "path": "**/*.markdown" }, { "path": "**/*.md.tmp" }, { "path": "**/*.markdown.tmp" }]
    },
    "fs:allow-app-write-recursive",
    "fs:allow-app-meta-recursive",
    "fs:allow-mkdir",
    {
      "identifier": "fs:allow-remove",
      "allow": [{ "path": "**/*.md.tmp" }, { "path": "**/*.markdown.tmp" }]
    },
    {
      "identifier": "fs:allow-rename",
      "allow": [{ "path": "**/*.md" }, { "path": "**/*.markdown" }, { "path": "**/*.md.tmp" }, { "path": "**/*.markdown.tmp" }]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [{ "path": "**" }]
    },
    {
      "identifier": "fs:allow-copy-file",
      "allow": [{ "path": "**/*.md" }, { "path": "**/*.markdown" }, { "path": "**/*.md.bak" }, { "path": "**/*.markdown.bak" }]
    },
    "dialog:default",
    "dialog:allow-open"
  ]
}
